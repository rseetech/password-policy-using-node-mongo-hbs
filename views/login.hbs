<div class="login-page">
    <div class="row justify-content-md-center">
        <div class="col-md-4 maincontant">
            <h1 class="logo">Rodeo Travel</h1>
            <h3 class="logo">Login</h3>
            <form role="form" action="/checklogin" method="post">
                <div class="form-content">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" name="email" class="form-control input-underline input-lg" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control input-underline input-lg" name="password" required>
                    </div>
                </div>
                <button type="submit" class="btnAllfrm btn rounded-btn">Login</button> &nbsp;&nbsp;&nbsp;
                <a class="btnAllfrm btn rounded-btn" style="margin-right: 3px; width: 160px!important;" href="/changePassword"> Change Password</a>
            </form>
        </div>
    </div>
</div>
