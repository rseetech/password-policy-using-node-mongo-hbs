<div class="login-page">
    <div class="row justify-content-md-center">
        <div class="col-md-4 maincontant">
            <h1 class="logo">Rodeo Travel</h1>
            <h3 class="logo">Register</h3>
            <form name="form1" role="form" action="/register" method="post">
                <div class="form-content">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control input-underline input-lg">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" name="email" class="form-control input-underline input-lg">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="text" id="password" class="form-control input-underline input-lg" name="password">
                    </div>
                </div>
                <button type="submit" class="btnAllfrm btn rounded-btn">Register</button>
            </form>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            {{# if errors }}
                {{# each errors }}
                    <p class="alert alert-danger">{{ this.msg }}</p>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>